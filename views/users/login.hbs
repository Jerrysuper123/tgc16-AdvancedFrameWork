{{#extends "base"}}
{{#block "content"}}
    <h1>Login</h1>
    <a href="/users/register" class="btn btn-success">Register</a>
    <p>Please login with your account below!</p>
    <form method="POST">
             <input type="hidden" name="_csrf" value="{{csrfToken}}" />
        {{{form}}}
        <input type="submit" class="mt-3 btn btn-primary" value="Login"/>
    </form>
{{/block}}
{{/extends}}